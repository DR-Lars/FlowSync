# FlowSync Configuration

# Global Configuration
SHIP_NAME=MyShip
REMOTE_API_URL=https://flow.dash.com/api/report
REMOTE_API_URL_BATCH=https://flow.dash.com/api/report/BATCH
REMOTE_API_TOKEN=replace-with-real-token

# Container Registry Configuration
REGISTRY_OWNER=dr-lars

# Meter Configurations (up to 3 meters)
# Meter 1 (required - at least one meter must be configured)
METER_1_ID=12345
METER_1_LOCAL_API_URL=http://192.168.0.1
METER_1_ARCHIVE_NAME=Archive1

# Meter 2 (optional)
# METER_2_ID=67890
# METER_2_LOCAL_API_URL=http://192.168.0.2
# METER_2_ARCHIVE_NAME=Archive2

# Meter 3 (optional)
# METER_3_ID=11111
# METER_3_LOCAL_API_URL=http://192.168.0.3
# METER_3_ARCHIVE_NAME=Archive3

# Optional
POLL_INTERVAL_MS=900000
BATCH_SIZE=100 # MAX 100
MAX_RETRIES=3
RETRY_DELAY_SECONDS=10
TIMEOUT_SECONDS_LOCAL=30
TIMEOUT_SECONDS_REMOTE=300
PORT=3000

# Report Poller Configuration (optional)
# If configured, will check for reports on each meter's local API and post to ticket API
# REPORT_TICKET_API_URL=http://flow.allmas-it.be/api/ticket
# REPORT_FILTER=*Mass*

# Admin Credentials for Web Configuration Editor
ADMIN_USER=admin
ADMIN_PASSWORD=admin
